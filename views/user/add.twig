{% extends "/templates/base.html" %}

{% block content %}
<form class="" action="{{ path_for('user.add.post')}}" method="post">
    <div class="form-group {{ errors.name ? 'has-error' : ''}} ">
      <label for="">Name</label>
      <input type="text" class="form-control" id="" name="name" placeholder="Name" value="{{ old.name }}">
      {% if errors.name %}
        <span class="help-block">{{ errors.name | first }}</span>
        {% endif %}
    </div>

    <div class="form-group {{ errors.phone ? 'has-error' : ''}}">
      <label for="">Phone</label>
      <input type="text" class="form-control" name="phone" id="" placeholder="Phone" value="{{ old.phone }}">
      {% if errors.phone %}
        <span class="help-block">{{ errors.phone | first }}</span>
        {% endif %}
    </div>

    <div class="form-group {{ errors.email ? 'has-error' : ''}}">
      <label for="">email</label>
      <input type="text" class="form-control" id="" name="email" placeholder="email" value="{{ old.email }}">
      {% if errors.email %}
        <span class="help-block">{{ errors.email | first }}</span>
        {% endif %}
    </div>

    <div class="form-group {{ errors.username ? 'has-error' : ''}}">
      <label for="">Username</label>
      <input type="text" class="form-control" id="" name="username" placeholder="Username" value="{{ old.username }}">
      {% if errors.username %}
        <span class="help-block">{{ errors.username | first }}</span>
        {% endif %}
    </div>

    <div class="form-group {{ errors.password ? 'has-error' : ''}}">
      <label for="">Password</label>
      <input type="text" class="form-control" id="" name="password" placeholder="Password">
      {% if errors.password %}
        <span class="help-block">{{ errors.password | first }}</span>
        {% endif %}
    </div>

    <div class="form-group">
        <button type="submit" name="submit" class="btn btn-large btn-block btn-success">Submit</button>
    </div>


</form>


{% endblock %}
